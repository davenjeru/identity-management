{
  "name": "shopinc-identity-management",
  "version": "1.0.0",
  "description": "The identity management microservice for ShopInc.",
  "main": "dist/index.js",
  "repository": "https://github.com/shop-inc/identity-management.git",
  "author": "shop.inc.dev@gmail.com",
  "license": "MIT",
  "scripts": {
    "copy-protobufs": "rm -rf ./dist/protobufs/ && cp -R ./server/protobufs ./dist",
    "ts": "tsc",
    "ts:watch": "tsc -w",
    "lint": "./node_modules/.bin/tslint --project '.'",
    "start:dev": "yarn ts && yarn copy-protobufs && NODE_ENV=development nodemon dist/index.js",
    "db:seed": "yarn ts && node dist/database/seeders",
    "test": "jest --config=jest.config.json --runInBand --detectOpenHandles --forceExit --coverage"
  },
  "dependencies": {
    "@echo-health/grpc-interceptors": "^0.0.12",
    "@grpc/proto-loader": "^0.4.0",
    "debug": "~4.1.1",
    "dotenv": "~6.2.0",
    "google-auth-library": "^3.1.0",
    "grpc": "^1.19.0",
    "jsonwebtoken": "^8.5.0",
    "mailgun-js": "^0.22.0",
    "mjml": "^4.4.0-beta.1",
    "neo4j-driver": "^1.7.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.2",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.1",
    "@types/mailgun-js": "^0.16.3",
    "@types/mjml": "^4.0.2",
    "@types/node": "^11.11.0",
    "@types/protobufjs": "^6.0.0",
    "babel-jest": "^24.4.0",
    "jest": "^24.4.0",
    "nodemon": "~1.18.9",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  },
  "engines": {
    "node": "11.x",
    "yarn": "1.13.x"
  }
}
